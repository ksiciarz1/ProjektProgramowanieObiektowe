<Window x:Class="ProjektProgramowanieObiektowe.BookForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektProgramowanieObiektowe"
        mc:Ignorable="d"
        Title="BookForm" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="21*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="183*"/>
        </Grid.RowDefinitions>
        <Button Content="Rent" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Button Content="Add Book" HorizontalAlignment="Center" Margin="0,56,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <Button Content="Add Reader" HorizontalAlignment="Center" Margin="0,98,0,0" Grid.Row="1" VerticalAlignment="Top"/>
        <DataGrid x:Name="mainDataGrid" Grid.Column="1" Grid.Row="1" ItemsSource="{Binding}" IsEnabled="False" HeadersVisibility="Column" SelectionMode="Single">
        </DataGrid>

    </Grid>
</Window>
